.painting
    margin-top: 50px
    display: flex;
    border-radius: 5px

    -webkit-box-shadow: 0 10px 6px -6px #777
    -moz-box-shadow: 0 10px 6px -6px #777
    box-shadow: 0 10px 6px -6px #777

    background-color: white
    padding: 15px

    img
        //border-radius: 5px
        max-height: 250px
        height: auto;
        width: auto
        margin: 20px

        -webkit-box-shadow: 0 10px 6px -6px #777
        -moz-box-shadow: 0 10px 6px -6px #777
        box-shadow: 0 10px 6px -6px #777

        @media screen and (max-width: 780px)
            /*max-height: none;
            height: auto;
            width: 100%*/
            display: block;
            margin: 0 auto;

    .painting-content
        padding: 10px 15px
        background-color: white
        width: 100%

    .painting-title
        font-size: 1.5rem
        border-bottom: 1px solid lightgray
        padding-bottom: 2px
        margin-bottom: 10px

        .subtext
            font-style: italic;
            color: gray
            font-size: 1rem
            font-weight: 300

            &:before
                content: " - "

    @media screen and (max-width: 780px)
        display: block;
